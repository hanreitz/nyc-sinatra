<h2>Edit Historical Landmark</h2>

<form action='/landmarks/<%= @landmark.id %>' method="POST">
  <input type="hidden" name="_method" value="patch">
  <h1>Current Landmark Name: <%= @landmark.name %></h1>
  <label>New Landmark Name: </label>
  <input type="text" id="name" name="landmark[name]">
  <h3>Current Landmark Year Completed: <%= @landmark.year_completed %></h3>
  <input type="text" id="year_completed" name="landmark[year_completed]">
  <input type="submit" value="Edit Landmark">
</form>

<a class="button" href="/landmarks">Landmarks</a>
<a class="button" href="/">Home</a>
